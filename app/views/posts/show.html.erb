<p>
  <h1><%= @post.title %></h1>
</p>

<p>
	<%= @post.user.name %> | <%= @post.updated_at.strftime("%d %b %Y") %>
</p>

<p>
	<% if @post.image? %>
		<%= image_tag @post.image_url(:medium) %>
	<% end %>
</p>

<p>
	<% if @post.image? %>
		<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@post.lat}%2C#{@post.lng}" %>
	<% end %>
</p>

<p>
  <%= @post.body %>
</p>

<%= link_to 'Back', posts_path %>

<% if @post.user == current_user %>
	 | <%= link_to 'Edit', edit_post_path(@post) %> | 
	 <%= link_to 'Erase', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
