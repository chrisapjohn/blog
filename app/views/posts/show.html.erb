<p>
  <h1><%= @post.title %></h1>
</p>

<p>
	<%= @post.user.name %> | <%= @post.updated_at.strftime("%d %b %Y") %>
</p>

<p>
	<% if @post.image? %>
		<%= image_tag @post.image(:medium) %>
	<% end %>
</p>

<p>
  <%= @post.body %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
