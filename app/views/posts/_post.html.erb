<div class="box">
  <% if post.is_blog? == false && post.image? %>
    <%= link_to (image_tag post.image(:medium)), post %>
  <% else %>
  	<div class="panel-heading">
  		<h3><%= link_to post.title, post %></h3>
  	</div>
  <% end %>
  <%= link_to(post) do %>
    <div class="panel-body">
      <%= post.body %> 
    </div>
  <% end %>
</div>